{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"] // 根据ts配置项设置path属性可以自定义引入的路径
    }
  },
  "include": ["vite.config.ts"]
}
